{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "metadata": {
        "description": "Small unique string."
      },
      "defaultValue": "eastus"
    },
    "name": {
      "type": "string",
      "metadata": {
        "description": "Solution Name"
      },
      "defaultValue": "demo-core-container"
    },
    "random": {
      "type": "int",
      "metadata": {
        "description": "3 Digit Random Integer 100-999"
      },
      "minValue": 100,
      "maxValue": 999
    },
    "templateURL": {
      "type": "string",
      "metadata": {
        "description": "URL Location on where to find the templates"
      },
      "defaultValue": "https://raw.githubusercontent.com/danielscholl/demo-core-container/master/templates/"
    },
    "servicePrincipalClientId": {
      "type": "string",
      "metadata": {
        "description": "Application Client Id."
      }
    },
    "servicePrincipalClientKey": {
      "type": "string",
      "metadata": {
        "description": "Application Client Key."
      }
    },
    "servicePrincipalObjectId": {
      "type": "string",
      "metadata": {
        "description": "ObjectId of Service Principal."
      }
    },
    "userObjectId": {
      "type": "string",
      "metadata": {
        "description": "ObjectId of current logged in user."
      }
    }
  },
  "variables": {
    "defaultGroup": "[concat(parameters('name'), '-', parameters('random'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/resourceGroups",
      "apiVersion": "2018-05-01",
      "location": "[parameters('location')]",
      "name": "[variables('defaultGroup')]",
      "properties": {}
    },
    {
      "name": "TemplateVNet",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-05-10",
      "resourceGroup": "[variables('defaultGroup')]",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/resourceGroups/', variables('defaultGroup'))]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('templateURL'), 'deployVNet.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "prefix": {
            "value": "[string(parameters('random'))]"
          }
        }
      }
    },
    {
      "name": "TemplateKeyVault",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-05-10",
      "resourceGroup": "[variables('defaultGroup')]",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/resourceGroups/', variables('defaultGroup'))]",
        "TemplateVNet"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('templateURL'), 'deployKeyVault.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "prefix": {
            "value": "[string(parameters('random'))]"
          },
          "servicePrincipalClientId": {
            "value": "[parameters('servicePrincipalClientId')]"
          },
          "servicePrincipalClientKey": {
            "value": "[parameters('servicePrincipalClientKey')]"
          },
          "servicePrincipalObjectId": {
            "value": "[parameters('servicePrincipalObjectId')]"
          },
          "userObjectId": {
            "value": "[parameters('userObjectId')]"
          }
        }
      }
    },
    {
      "name": "TemplateRegistry",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-05-10",
      "resourceGroup": "[variables('defaultGroup')]",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/resourceGroups/', variables('defaultGroup'))]",
        "TemplateKeyVault"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('templateURL'), 'deployRegistry.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "prefix": {
            "value": "[string(parameters('random'))]"
          },
          "servicePrincipalId": {
            "value": "[parameters('servicePrincipalObjectId')]"
          }
        }
      }
    }
  ],
  "outputs": {}
}
